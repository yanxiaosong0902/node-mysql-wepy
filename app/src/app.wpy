<script>
import wepy from 'wepy'
import 'wepy-async-function'
import { getCryptData, getCryptData_login } from './utils/getCryptData.js'
//require('./utils/getCryptData.js')

export default class extends wepy.app {
    config = {
        pages: [
            'pages/me',
            'pages/index',
            'pages/cart',
            'pages/category',
            'pages/info'
        ],
        window: {
            backgroundTextStyle: 'light',
            navigationBarBackgroundColor: '#ff0000',
            navigationBarTitleText: '印尼小程序',
            navigationBarTextStyle: '#fff'
        },
        tabBar: {
            selectedColor:"#ff0000",
            "list": [
                {
                    "pagePath": "pages/index",
                    "text": "首页"
                },
                {
                    "pagePath": "pages/category",
                    "text": "分类"
                },
                {
                    "pagePath": "pages/cart",
                    "text": "购物车"
                },
                {
                    "pagePath": "pages/me",
                    "text": "我的"
                }
            ]
        },
        http_url:'http://localhost:3000'
    }

    globalData = {
        userInfo: null
    }

    constructor () {
        super()
        this.use('promisify');
        this.use('requestfix')
    }

    onLaunch() {
        this.testAsync();
        // wepy.login().then( d => {
        //     console.log(d);
        // })
    }

    sleep (s) {
        return new Promise((resolve, reject) => {
            setTimeout(() => {
                resolve('promise resolved')
            }, s * 1000)
        })
    }

    async testAsync () {
        const data = await this.sleep(3)
        console.log(data)
    }

    getUserInfo(cb) {
        const that = this
        if (this.globalData.userInfo) {
            return this.globalData.userInfo
        }
        // wepy.getUserInfo({
        //     success (res) {
        //         that.globalData.userInfo = res.userInfo
        //         cb && cb(res.userInfo)
        //         console.log(res);
        //     }
        // })
        getCryptData_login(wepy).then( d => {
            this.globalData.userInfo = d.userInfo;
            cb&&cb(d.userInfo)
            return getCryptData(d,wepy,this.config.http_url);
        }).then( data => {
            wepy.setStorage({
                key:'openId',
                data:data.data.data.openId
            });
            //localStorage.setItem('openId',data.data.data.openId);
        }).catch(e => {
            console.log(e);
        })
    }
}
</script>
